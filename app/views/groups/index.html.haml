%h1 Listing groups

%table.DataList
  %tr
    %th.first Name
    %th Organized By
    %th Location
  - @groups.each do |group|
    %tr{:class => cycle('even','odd') }
      %td.first= link_to group.name, object_url(group.permalink)
      %td= link_to "#{group.organizer.first_name} #{group.organizer.last_name}", person_url(group.organizer)
      %td= h "#{group.city}, #{group.state}"

%p.Action= link_to 'New group', new_object_url